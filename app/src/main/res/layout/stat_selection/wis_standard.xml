<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_weight="1"
    android:id="@+id/wis_standard">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleWIS"
        android:text="WISDOM"
        android:textAlignment="center"/>

    <Spinner
        android:id="@+id/spnWIS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleWIS"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/spnWIS"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/racialWIS"
                android:text="Racial Bonus"
                android:gravity="center_vertical"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/baseWIS"
                android:text="Base amount"
                android:gravity="center_vertical"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/otherBonusWIS"
                android:text="Other bonuses"
                android:gravity="center_vertical"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/totalWIS"
                android:text="Total Score"
                android:gravity="center_vertical"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/WISModifier"
                android:text="Score Modifier"
                android:gravity="center_vertical"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/racialWISNumber"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="+0"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/baseWISNumber"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="0"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/otherWISNumber"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="+0"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/totalWISNumber"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="0"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/modifierWISNumber"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="+0"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>