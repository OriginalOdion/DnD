<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_weight="1"
    android:id="@+id/dex_standard">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleDEX"
        android:text="DEXTERITY"
        android:textAlignment="center"/>

    <Spinner
        android:id="@+id/spnDEX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleDEX"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/spnDEX"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/racialDEX"
                android:text="Racial Bonus"
                android:gravity="center_vertical"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/baseDEX"
                android:text="Base amount"
                android:gravity="center_vertical"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/otherBonusDEX"
                android:text="Other bonuses"
                android:gravity="center_vertical"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/totalDEX"
                android:text="Total Score"
                android:gravity="center_vertical"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/DEXModifier"
                android:text="Score Modifier"
                android:gravity="center_vertical"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/racialDEXNumber"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="+0"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/baseDEXNumber"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="0"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/otherDEXNumber"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="+0"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/totalDEXNumber"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="0"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/modifierDEXNumber"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="+0"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>